<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".listProject">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="@string/veuillez_cliquer_sur_l_un_des_projets_et_puis_sur_d_tails_ou_taches"
                    android:drawableLeft="@mipmap/login"
                    android:padding="5dp"
                    android:textColor="#E3D5D5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

        </LinearLayout>


        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="264dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/id_detail_projet"
                    android:layout_width="113dp"
                    android:layout_height="33dp"
                    android:background="@drawable/shapesignup"
                    android:shadowColor="@android:color/transparent"
                    android:text="@string/details"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/id_list_tache"
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/shapesignup"
                    android:shadowColor="@android:color/transparent"
                    android:text="@string/taches"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/id_list_team"
                    android:layout_width="113sp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shapesignup"
                    android:shadowColor="@android:color/transparent"
                    android:text="@string/team"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
        </LinearLayout>

</LinearLayout>
